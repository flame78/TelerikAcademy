@model LibrarySystem.Web.ViewModels.Books.BookViewModel

    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="categoryId" class="col-md-2 control-label">Category</label>
            <div class="col-md-10">
                @(Html.Kendo().DropDownListFor(m => m.CategoryId)
        .DataTextField("Name")
        .DataValueField("Id")
        .DataSource(source =>
            {
            source.Read(read =>
            {
                read.Action("GetCategories", "AdministrationGrid");
            });
        })

        .HtmlAttributes(new { id = "categoryId" }))
            </div>
        </div>