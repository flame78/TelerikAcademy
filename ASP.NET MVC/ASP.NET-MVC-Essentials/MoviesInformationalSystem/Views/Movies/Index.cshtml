@model IEnumerable<MoviesInformationalSystem.Data.Models.Movie>

@{
    ViewBag.Title = "Movies Page";
}

<h2>Movies</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            Studio Name
        </th>
        <th>
            Leading Female Actor Name
        </th>
        <th>
            Leading Male Actor Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Studio.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LeadingFemaleRole.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LeadingMaleRole.Name)
        </td>
    </tr>
}

</table>
