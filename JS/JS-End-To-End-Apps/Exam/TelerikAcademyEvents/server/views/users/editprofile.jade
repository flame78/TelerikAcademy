extends ../shared/layout
block main-content
    .container
        .col-md-6.col-md-offset-3
            .well.bs-component
                form.form-horizontal(method="post" enctype="multipart/form-data")
                    fieldset
                        legend Edit profile
                        .form-group
                            label.col-lg-4.control-label(for="firstname") First name
                            .col-lg-8
                                input.form-control(id="firstname" type="text" name="firstName" placeholder="First name" value="#{currentUser.firstName}" required)
                        .form-group
                            label.col-lg-4.control-label(for="lastname") Last name
                            .col-lg-8
                                input.form-control(id="lastname" type="text" name="lastName" placeholder="Last name" value="#{currentUser.lastName}" required)
                        .form-group
                            label.col-lg-4.control-label(for="email") Email address
                            .col-lg-8
                                input.form-control(id="email" type="email" name="emailAddress" placeholder="Email address" value="#{currentUser.emailAddress}" required)
                        .form-group
                            label.col-lg-4.control-label(for="phonenumber") Phone number
                            .col-lg-8
                                input.form-control(id="phonenumber" type="text" name="phoneNumber" placeholder="Phone number" value="#{currentUser.phoneNumber}" )
                        .form-group
                            label.col-lg-4.control-label(for="facebookLink") Facebook profile
                            .col-lg-8
                                input.form-control(id="facebookLink" type="link" name="facebookLink" placeholder="Facebook profile" value="#{currentUser.facebookLink}" )
                        .form-group
                            label.col-lg-4.control-label(for="twitterLink") Twitter profile
                            .col-lg-8
                                input.form-control(id="twitterLink" type="link" name="twitterLink" placeholder="Twitter profile" value="#{currentUser.twitterLink}" )
                        .form-group
                            label.col-lg-4.control-label(for="linkedInLink") LinkedIn profile
                            .col-lg-8
                                input.form-control(id="linkedInLink" type="link" name="linkedInLink" placeholder="LinkedIn profile" value="#{currentUser.linkedInLink}"  )
                        .form-group
                            label.col-lg-4.control-label(for="googlePlusLink") Google+ profile
                            .col-lg-8
                                input.form-control(id="googlePlusLink" type="link" name="googlePlusLink" placeholder="Google+ profile" value="#{currentUser.googlePlusLink}" )
                        .form-group
                            label.col-lg-4.control-label(for="file") Avatar
                            .col-lg-8
                                input(type="file" data-filename-placement="inside" name="avatar")
                                img(src="/avatar" height="200").pull-right
                        .form-group
                            input.btn.btn-primary.center-block(type="submit" value="Save")
block page-scripts
    script(src="/app/bootstrapFileInput.js")
