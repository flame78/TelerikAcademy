extends ../shared/layout
block main-content
    .container
        .col-md-6.col-md-offset-3
            .well
                form.form-horizontal(method="post")
                    fieldset
                        legend Login From
                        .form-group
                            label.col-lg-4.control-label(for="username") Username
                            .col-lg-8
                                input.form-control(id="username" type="text" name="username" placeholder="Username")
                        .form-group
                            label.col-lg-4.control-label(for="password") Password
                            .col-lg-8
                                input.form-control(id="password" type="password" name="password" placeholder="Password")
                        .form-group
                            input.btn.btn-primary.center-block(type="submit" value="Login")