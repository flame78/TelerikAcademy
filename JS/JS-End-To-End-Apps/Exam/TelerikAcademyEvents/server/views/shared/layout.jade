doctype
html
    head
        title Telerik Academy Events
        link(rel="stylesheet" href="/lib/bootstrap-3.2.0/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/site.css")
    body
        header.nav.navbar-primary
            .container
                .navbar-header
                    a.navbar-brand(href="/") Telerik Academy Events System
                .navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li
                            a(href="/") Home
                        if !currentUser
                            li
                                a(href="/register") Register

                        else
                            li
                                a(href="/profile") Profile
                            li
                                a(href="/") Active (upcoming) events
                            li
                                a(href="/") Past events
                            li
                                a(href="/createevent") Create event


                    ul.nav.navbar-nav.navbar-right
                        if !currentUser
                            li
                                a(href="/login") Login
                        else
                            li
                                img(src="/avatar" height="50")
                            li.dropdown
                                a#user-menu.dropdown-toggle(href='#', data-toggle="dropdown")
                                    | #{currentUser.userName}
                                    span.caret
                                ul.dropdown-menu(aria-labelledby='user-menu')
                                    li
                                        a(href="/editprofile") Edit profile
                                    li
                                        a(href="/change-password") Change password
                                    li
                                        a(href="/logout") Logout
        .container
            br
            if errorMessage
                .alert.alert-danger(role="alert") #{errorMessage}

            block main-content

        footer
            p.text-center
                | &copy; Telerik Academy 2014

        include scripts
        block page-scripts